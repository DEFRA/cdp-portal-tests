{
  "name": "cdp-node-backend-template",
  "version": "0.1.0",
  "description": "CDP Backend Template",
  "main": "src/index.js",
  "engines": {
    "node": "20.3.0"
  },
  "scripts": {
    "build": "npm run build:server",
    "build:server": "babel --delete-dir-on-start --ignore '**/*.test.js' --ignore 'src/__fixtures__' --copy-files --no-copy-ignored --out-dir ./.server ./src",
    "docker:dev": "NODE_ENV=development npm run server:watch",
    "dev": "npm run server:watch",
    "dev:debug": "npm run server:debug",
    "format": "prettier --write 'src/**/*.js' '**/*.{js,md,json,config.js,test.js,graphql.js}'",
    "format:check": "prettier --check 'src/**/*.js' '**/*.{js,md,json,config.js,test.js,graphql.js}'",
    "postinstall": "npm run setup:husky",
    "lint": "npm run lint:js",
    "lint:fix": "eslint . --fix",
    "lint:js": "eslint .",
    "postversion": "git add package.json package-lock.json && git commit -m $npm_package_version",
    "test": "TZ=UTC jest --coverage --verbose",
    "test:watch": "TZ=UTC jest --watch",
    "server:watch": "nodemon --exec babel-node ./src",
    "server:debug": "nodemon --exec babel-node --inspect ./src",
    "prestart": "npm run build",
    "start": "NODE_ENV=production node --use-strict ./.server",
    "setup:husky": "node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\""
  },
  "author": "Defra DDTS",
  "license": "OGL-UK-3.0",
  "dependencies": {
    "@babel/runtime": "7.23.2",
    "@elastic/ecs-pino-format": "1.4.0",
    "@hapi/boom": "10.0.1",
    "@hapi/hapi": "21.3.2",
    "aws4": "1.12.0",
    "babel-plugin-module-resolver": "5.0.0",
    "convict": "6.2.4",
    "hapi-pino": "12.1.0",
    "joi": "17.11.0",
    "lodash": "4.17.21",
    "mongodb": "6.1.0",
    "node-fetch": "2.7.0",
    "pino": "8.16.0"
  },
  "devDependencies": {
    "@babel/cli": "7.23.0",
    "@babel/core": "7.23.2",
    "@babel/node": "7.22.19",
    "@babel/preset-env": "7.23.2",
    "babel-jest": "29.7.0",
    "babel-loader": "9.1.3",
    "eslint": "8.51.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-n": "16.2.0",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-promise": "6.1.1",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "nodemon": "3.0.1",
    "npm-run-all": "4.1.5",
    "pino-pretty": "10.2.3",
    "prettier": "3.0.3",
    "resolve-url-loader": "5.0.0"
  }
}
